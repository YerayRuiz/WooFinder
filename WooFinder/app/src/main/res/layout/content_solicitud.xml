<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bBorrarSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bAddSolicitud"
            android:layout_alignParentStart="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="19dp"
            android:text="Borrar Solicitud" />

        <Button
            android:id="@+id/bAddSolicitud"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="63dp"
            android:text="Add Solicitud" />

        <Button
            android:id="@+id/btnListarSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bBorrarSolicitud"
            android:layout_alignParentStart="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="24dp"
            android:text="LISTAR SOLICITUD" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>