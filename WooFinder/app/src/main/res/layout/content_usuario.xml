<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnAddUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="127dp"
            android:layout_marginTop="111dp"
            android:text="@string/add_usuario" />

        <Button
            android:id="@+id/btnDeleteUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAddUsuario"
            android:layout_alignParentStart="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="81dp"
            android:text="@string/delete_usuario" />

        <Button
            android:id="@+id/btnListarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDeleteUsuario"
            android:layout_alignParentStart="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="85dp"
            android:text="LISTAR USUARIO" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>